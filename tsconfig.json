{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "alwaysStrict": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": [
      "esnext.asynciterable",
      "es2018"
    ],
    "typeRoots": ["./types", "./node_modules/@types"]
  },
  "include": [
    "src/",
    "types/"
  ],
  "exclude": [
    "**/__mocks__/*.ts",
    "**/__benchmarks__/*.ts",
    "**/__tests__/*.ts"
  ]
}
